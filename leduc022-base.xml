<?xml version="1.0" encoding="ISO-8859-1"?>

<PropertyList>

  <sim include="Systems/views.xml">
 
    <description>Leduc 022 (YASim)</description>
    <author>BARANGER Emmanuel</author>
    <aircraft-version>0.2</aircraft-version>
    <status>0.1 Alpha</status>
   
    <fuel-fraction>0.75</fuel-fraction>
  
    <startup>
      <splash-texture>Aircraft/Leduc-022/leduc022-splash.png</splash-texture>
    </startup>

    <model>
      <path>Aircraft/Leduc-022/Models/leduc022.xml</path>
      <livery>
        <file type="string">default</file>
      </livery>
    </model>

    <sound>
      <path>Aircraft/Leduc-022/Sounds/leduc022-sound.xml</path>
    </sound>

    <multiplay>
      <chat_display>1</chat_display>
      <generic> 
        <int n="0"    type="int">  0 </int>                                         <!-- 0 immat -->
        <int n="1"    type="int">  0 </int>                                         <!-- 1 immat -->
        <int n="2"    type="int">  0 </int>                                         <!-- 2 immat -->
        <int n="3"    type="int">  0 </int>                                         <!-- 3 immat -->
        <int n="4"    type="int">  0 </int>                                         <!-- 4 immat -->
        <int n="5"    type="int">  0 </int>                                         <!-- 5 immat -->
        <int n="6"    type="bool"> 1 </int>                                         <!-- 6 smoke/bomb/torpedo -->
        <int n="7"    type="int">  0 </int>                                         <!-- 7 color -->
        <int n="8"    alias="/systems/electrical/outputs/nav-lights">  0 </int>     <!-- 8 nav-lights -->
        <int n="9"    alias="/sim/model/lights/beacon/state">  false </int>         <!-- 9 strobe-lights -->
        <float n="0"  alias="/sim/model/door-positions/crew/position-norm"/>
        <float n="1"  alias="/sim/model/door-positions/passenger/position-norm"/>
        <float n="2"  alias="/position/gear-agl-m"> 0 </float>                      <!-- altitude for MP shadow -->
        <float n="3"  alias="/position/altitude-ft"> 0 </float>                     <!-- altitude for Smoke/Trail -->
        <float n="4"  alias="/engines/engine[0]/n1"/>
        <float n="5"  alias="/engines/engine[0]/n2"/>
        <float n="6"  alias="/gear/gear[0]/wow/"/>
        <float n="7"  alias="/gear/gear[1]/wow/"/>
        <float n="8"  alias="/gear/gear[2]/wow/"/>
        <float n="9"  alias="/gear/gear[0]/rollspeed-ms"/>
        <float n="10" alias="/gear/gear[1]/rollspeed-ms"/>
        <float n="11" alias="/gear/gear[2]/rollspeed-ms"/>
        <float n="12" alias="/engines/engine[0]/throttle" />
        <float n="13" alias="/engines/engine[1]/afterburner"/>
        <float n="14" alias="/engines/engine[1]/n1"/>
        <float n="15" alias="/engines/engine[1]/n2"/>
        <float n="16" alias="/engines/engine[1]/throttle" />
        <!-- For Bombable -->
        <int type="int" n="10" alias="controls/armament/trigger">0</int>
        <string n="9" type="string" />
      </generic>
    </multiplay>
    
    <help include="Systems/help.xml"/>

    <multiplay>
      <chat_display>1</chat_display>
    </multiplay>

    <weight n="0">
      <name>Crew</name>
      <weight-lb>180</weight-lb> 
      <max-lb>400</max-lb>
      <min-lb>180</min-lb>
    </weight>

    <replay>
      <disable>1</disable>
    </replay>

    <menubar include="Dialogs/leduc022-menu.xml"/>

  </sim>

  <environment>
    <turbulence>
      <use-cloud-turbulence>true</use-cloud-turbulence>
    </turbulence>
  </environment>

  <controls>
    <gear>
      <brake-parking type="double">1</brake-parking>
    </gear>
  </controls>

  <engines>
    <engine n="0">
      <engine-num type="int">0</engine-num>
      <on-startup-running type="bool">false</on-startup-running>
    </engine>
    <engine n="1">
      <engine-num type="int">1</engine-num>
      <on-startup-running type="bool">true</on-startup-running>
    </engine>
  </engines>

  <input>
    <keyboard include="Systems/leduc022-keyboard.xml"/>
  </input>
 
  <nasal>
    <doors>
      <file>Aircraft/Leduc-022/Nasal/doors.nas</file>
    </doors>
    <leduc022>
      <file>Aircraft/Leduc-022/Nasal/light.nas</file>
      <file>Aircraft/Leduc-022/Nasal/liveries.nas</file>
    </leduc022>
  </nasal>

</PropertyList>
